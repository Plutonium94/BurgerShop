
<%= form_with scope: :burger, url: burgers_path, local: true do |form| %>

	<%= form.text_field :name, :placeholder=> "Burger name" %><br>

	<%= form.number_field :price, :step=> 0.01, :min=>0, :placeholder=>"Price"%> $<br> 

	<%= form.text_area :description, :placeholder=>"Burger description" %><br>

	<%= form.submit %>

<% end %>
